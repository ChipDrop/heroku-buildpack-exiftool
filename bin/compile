#!/usr/bin/env bash
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

arrow() {
  sed -u 's/^/-----> /'
}
indent() {
  sed -u 's/^/       /'
}

BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACK_DIR=`cd $(dirname $0)/..; pwd`

# Hardcoded URL of the "production release"
# NOTE: this used to be dynamic (see fork upstream), but 
# it would appear that exiftool.org changed the output of their RSS feed,
# so just hardcode a version
TARBALL_URL="https://exiftool.org/Image-ExifTool-12.76.tar.gz"
RENAME_DIR="Image-ExifTool-12.76"
VERSION_NO="12.76"

PROFILE_PATH="$BUILD_DIR/.profile.d"
TARGET_PATH="$BUILD_DIR/vendor"
VENDOR_PATH="/app/vendor"

echo "Installing exiftool $VERSION_NO" | arrow
mkdir -p "$TARGET_PATH"
cd "$TARGET_PATH"

# download and unpack
echo "Fetching $TARBALL_URL" | indent
curl --fail --retry 3 --retry-delay 1 --connect-timeout 3 "$TARBALL_URL" -s -o - | tar xzf -

# configure path
mkdir -p "$PROFILE_PATH"
cat <<EOF > "$PROFILE_PATH/exiftool.sh"
export PATH="$VENDOR_PATH/exiftool:\$PATH"
EOF

# show installed version
mv "$RENAME_DIR" exiftool
cd ./exiftool
echo "Installed: "`ls exif*` | indent
echo
